extends layout

block link
  -var selected = 'overview';

block head
  script.
    $(function () { 
      $('#container').highcharts({
        title: {
          text: 'Overview Performance'
        },
        xAxis: {
          type: 'datetime'
        },
        series: [{
          name: 'value',
          data: [29.9, 71.5, 106.4, 129.2, 144.0, 176.0, 135.6, 148.5, 216.4, 194.1, 95.6, 54.4],
          pointStart: Date.UTC(2015, 0, 1),
          pointInterval: 24 * 3600 * 1000,
        }]
      });
    });

block content
  h1.page-header Dashboard
    h2.sub-header= "Account Overview - " + user
    #container(style="width:100%; height:400px;")
    .table-responsive
      table.table.table-striped
        thead
          tr
            th #
            th Broker
            th Account Value
            th Stock Value
            th Cash
            th Gain
        tbody
          tr
            td 1
            td Robinhood
            td 15,000
            td 13,000
            td 2,000
            td +10%
