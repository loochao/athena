doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/dashboard.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')

  body
    .container
      .col-sm-6.col-md-4.col-md-offset-4
        h1 Please Login
        br
        form.form-signin(method="post", action="/login", id="loginForm", style="max-wdith: 300px;")
          .form-group
            input(class="form-control", id="username", type="text", name="username", placeholder="Enter your username", required)
          .form-group
            input(class="form-control", id="password", type="password", name="password", placeholder="Password", required)
          input(class="btn btn-lg btn-primary btn-block" type="submit", value="Log In")
        br
        - if (message)
          div.alert.alert-danger(role="alert") !{message}